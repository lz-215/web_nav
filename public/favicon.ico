<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32">
  <defs>
    <radialGradient id="bgGlow" cx="0.5" cy="0.5" r="0.8">
      <stop offset="0%" stop-color="#1B71EA" stop-opacity="0.3"/>
      <stop offset="70%" stop-color="#1B71EA" stop-opacity="0.1"/>
      <stop offset="100%" stop-color="#1B71EA" stop-opacity="0"/>
    </radialGradient>
    <linearGradient id="primaryGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#1B71EA"/>
      <stop offset="50%" stop-color="#00AAFF"/>
      <stop offset="100%" stop-color="#00FFAA"/>
    </linearGradient>
    <linearGradient id="secondaryGrad" x1="0%" y1="100%" x2="100%" y2="0%">
      <stop offset="0%" stop-color="#FD3DF6"/>
      <stop offset="50%" stop-color="#FF69F9"/>
      <stop offset="100%" stop-color="#8C6CF3"/>
    </linearGradient>
    <filter id="glow">
      <feGaussianBlur stdDeviation="1.5" result="coloredBlur"/>
      <feMerge> 
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>
  
  <!-- Background glow -->
  <circle cx="16" cy="16" r="14" fill="url(#bgGlow)" filter="url(#glow)"/>
  
  <!-- Main hexagon -->
  <polygon 
    points="16,4 22,8 22,16 16,20 10,16 10,8" 
    fill="url(#primaryGrad)" 
    opacity="0.9"
  />
  
  <!-- Overlapping triangle -->
  <polygon 
    points="16,6 20,10 16,14 12,10" 
    fill="url(#secondaryGrad)" 
    opacity="0.8"
  />
  
  <!-- Inner circle -->
  <circle 
    cx="16" cy="16" r="3" 
    fill="white" 
    opacity="0.9"
  />
  
  <!-- Corner accents -->
  <rect x="4" y="4" width="2" height="2" fill="url(#primaryGrad)" opacity="0.7"/>
  <rect x="26" y="4" width="2" height="2" fill="url(#secondaryGrad)" opacity="0.7"/>
  <rect x="4" y="26" width="2" height="2" fill="url(#secondaryGrad)" opacity="0.7"/>
  <rect x="26" y="26" width="2" height="2" fill="url(#primaryGrad)" opacity="0.7"/>
</svg> 